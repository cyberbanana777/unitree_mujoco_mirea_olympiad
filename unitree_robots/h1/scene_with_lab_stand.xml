<mujoco model="Unitree H1">
  <include file="h1.xml" />
  <statistic center="1 0.7 1.5" extent="0.8" />
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="-140" elevation="-30" />
  </visual>
  <asset>
    <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
      rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
      reflectance="0.2" />
    <texture name="banner_texture" type="2d" file="joke.png"/>
    <material name="banner_material" texture="banner_texture"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />

    <!-- Вертикальный стенд для кнопок -->
    <body name="button_panel" pos="0.5 -0.225 1.2" quat='0.9763 -0.2164 0 0'> <!-- Сместим стенд дальше и ниже -->
      <geom type="box" size="0.01 0.3 0.4" rgba="0.3 0.3 0.3 0.5"/> <!-- Вертикальный стенд -->
      
      <!-- Кнопка 1 (синяя) -->
      <body name="button1_base" pos="-0.02 0 -0.25" quat='0.7071 0 0.7071 0'> <!-- Смещение по Z для вертикального расположения -->
        <geom type="cylinder" size="0.05 0.01" rgba="0.1 0.1 0.1 1"/>
        <body name="button1_plunger" pos="0 0 0">
          <joint name="button1_joint" type="slide" axis="0 0 1" range="-0.05 0" limited="true" damping="1" springref="-0.05" stiffness="1"/>
          <geom type="cylinder" size="0.05 0.005" rgba="0 0 1 1"/> <!-- Синяя кнопка -->
        </body>
      </body>

      <!-- Кнопка 2 (розовая) -->
      <body name="button2_base" pos="-0.02 0 -0.125" quat='0.7071 0 0.7071 0'>
        <geom type="cylinder" size="0.05 0.01" rgba="0.1 0.1 0.1 1"/>
        <body name="button2_plunger" pos="0 0 0">
          <joint name="button2_joint" type="slide" axis="0 0 1" range="-0.05 0" limited="true" damping="1" springref="-0.05" stiffness="1"/>
          <geom type="cylinder" size="0.05 0.005" rgba="1 0 1 1"/> <!-- Розовая кнопка -->
        </body>
      </body>
      
      <!-- Кнопка 3 (зелёная) -->
      <body name="button3_base" pos="-0.02 0 0" quat='0.7071 0 0.7071 0'>
        <geom type="cylinder" size="0.05 0.01" rgba="0.1 0.1 0.1 1"/>
        <body name="button3_plunger" pos="0 0 0">
          <joint name="button3_joint" type="slide" axis="0 0 1" range="-0.05 0" limited="true" damping="1" springref="-0.05" stiffness="1"/>
          <geom type="cylinder" size="0.05 0.005" rgba="0 1 0 1"/> <!-- Зелёная кнопка -->
        </body>
      </body>

      <!-- Кнопка 4 (красная) -->
      <body name="button4_base" pos="-0.02 0 0.125" quat='0.7071 0 0.7071 0'>
        <geom type="cylinder" size="0.05 0.01" rgba="0.1 0.1 0.1 1"/>
        <body name="button4_plunger" pos="0 0 0">
          <joint name="button4_joint" type="slide" axis="0 0 1" range="-0.05 0" limited="true" damping="1" springref="-0.05" stiffness="1"/>
          <geom type="cylinder" size="0.05 0.005" rgba="1 0 0 1"/> <!-- Красная кнопка -->
        </body>
      </body>
    
      <!-- Кнопка 5 (желтая) -->
      <body name="button5_base" pos="-0.02 0 0.25" quat='0.7071 0 0.7071 0'>
        <geom type="cylinder" size="0.05 0.01" rgba="0.1 0.1 0.1 1"/>
        <body name="button5_plunger" pos="0 0 0">
          <joint name="button5_joint" type="slide" axis="0 0 1" range="-0.05 0" limited="true" damping="1" springref="-0.05" stiffness="1"/>
          <geom type="cylinder" size="0.05 0.005" rgba="1 1 0 1"/> <!-- Желтая кнопка -->
        </body>
      </body>

    </body>
    
    <body pos="0 3 2" quat='0.7071 0.7071 0 0'>
      <geom type="plane" size="2 1 0.01" material="banner_material"/>
    </body>

  </worldbody>

</mujoco>


   

      

      

      



